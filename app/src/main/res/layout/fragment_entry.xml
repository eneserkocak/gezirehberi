<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/entryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_screen"
        app:layout_constraintBottom_toBottomOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".viewMain.EntryFragment">


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/slaytText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/a" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/b"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/c"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/kugulu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/kil"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/e" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/ker" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/ks" />

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/p" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/pa" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/par" />

            <ImageView
                android:id="@+id/imageView37"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/park" />

            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/parks" />

            <ImageView
                android:id="@+id/imageView39"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/parkss" />

            <ImageView
                android:id="@+id/imageView40"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/parksss" />

            <ImageView
                android:id="@+id/imageView41"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/parkssss" />

            <ImageView
                android:id="@+id/imageView42"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:alpha="1"
                android:src="@drawable/parksssss" />

        </GridLayout>

        <TextView
            android:id="@+id/slaytText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Gez Dünya'yı Gör Konya'yı. Hz.Mevlana..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/gridLayout"
            app:layout_constraintStart_toStartOf="@+id/gridLayout"></TextView>


        <ImageView
            android:id="@+id/myCityBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/entrybutton"
            android:padding="7dp"
            android:src="@drawable/home"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Benim\nŞehrim"
            android:textAlignment="center"
            android:textColor="#65B669"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/myCityBtn"
            app:layout_constraintStart_toStartOf="@+id/myCityBtn"
            app:layout_constraintTop_toBottomOf="@+id/myCityBtn"></TextView>


        <ImageView
            android:id="@+id/placeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="125dp"
            android:background="@drawable/entrybutton"
            android:padding="7dp"
            android:src="@drawable/travel"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/myCityBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Gezi\nRotaları"
            android:textAlignment="center"
            android:textColor="#65B669"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/placeBtn"
            app:layout_constraintStart_toStartOf="@+id/placeBtn"
            app:layout_constraintTop_toBottomOf="@+id/placeBtn"></TextView>

        <ImageView
            android:id="@+id/favoriteBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="125dp"
            android:background="@drawable/entrybutton"
            android:padding="7dp"
            android:src="@drawable/favorite"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/weatherBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Favori\nListem"
            android:textAlignment="center"
            android:textColor="#65B669"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/favoriteBtn"
            app:layout_constraintStart_toStartOf="@+id/favoriteBtn"
            app:layout_constraintTop_toBottomOf="@+id/favoriteBtn"></TextView>


        <ImageView
            android:id="@+id/weatherBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/entrybutton"
            android:padding="7dp"
            android:src="@drawable/sunny"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Hava\nDurumu"
            android:textAlignment="center"
            android:textColor="#65B669"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/weatherBtn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/weatherBtn"
            app:layout_constraintTop_toBottomOf="@+id/weatherBtn"></TextView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/logo2" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="75dp"

            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="@id/imageView2"
            app:srcCompat="@drawable/logo1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>